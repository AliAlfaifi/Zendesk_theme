<section class="section hero hero-small">
  <header class="hero-inner">
    <h1 class="hero-inner-page-heading">{{category.name}}</h1>
    {{#if category.description}}
    <p class="hero-inner-description">{{category.description}}</p>
    {{/if}}
  </header>
</section>

<div class="container">

  <nav class="sub-nav">
    {{breadcrumbs}}
  </nav>

  <div class="category-container">
    <div class="category-content">

      <div class="section-tree">
        {{#each sections}}
        <section class="section">
          <h2 class="section-tree-title">
            {{#is name 'Getting started!'}}
            <i class="fas fa-rocket fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Getting started'}}
            <i class="fas fa-rocket fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Getting started v1.x'}}
            <i class="fas fa-rocket fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Getting started v2.x'}}
            <i class="fas fa-rocket fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Frequently asked questions'}}
            <i class="fas fa-question-circle" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Troubleshooting'}}
            <i class="fas fa-cogs fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Release notes'}}
            <i class="far fa-file-alt fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Administration tasks'}}
            <i class="fab fa-stack-overflow fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Beta features'}}
            <i class="fas fa-flask fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            {{#is name 'Evoko Home API'}}
            <i class="fas fa-file-code fa-2x" style="color:#74BF95;font-size:30px;"></i>
            {{/is}}
            <a href="{{url}}">{{name}}</a>
          </h2>
          {{#if articles}}
          <ul class="article-list">
            {{#each articles}}
            <li class="article-list-item{{#if promoted}} article-promoted{{/if}}">
              {{#if promoted}}
              <span data-title="{{t 'promoted'}}" class="icon-star"></span>
              {{/if}}
              <a href="{{url}}" class="article-list-link">{{title}}</a>
              {{#if internal}}
              <span class="icon-lock" title="{{t 'internal'}}"></span>
              {{/if}}
            </li>
            {{/each}}
          </ul>
          {{#if more_articles}}
          <a href="{{url}}" class="see-all-articles">
            {{t 'show_all_articles' count=article_count}}
          </a>
          {{/if}}
          {{/if}}
        </section>
        {{else}}
        <i class="category-empty">
          <a href="{{category.url}}">{{t 'empty'}}</a>
        </i>
        {{/each}}
      </div>
    </div>
  </div>
</div>